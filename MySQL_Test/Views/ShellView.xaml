<Window x:Class="MySQL_Test.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
        mc:Ignorable="d"
        Title="ShellView" Height="620" Width="700">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button x:Name="Aerzte" Content="Ärzte"/>
            <Button x:Name="Patienten" Content="Patienten"/>
            <Button x:Name="Tabs" Content="Tabs"/>
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="600*"/>
              
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0">
                <Button Content="Test"/>
                <ContentControl Grid.Row="2" x:Name="ActiveItem" Background="Aqua"/>
            </StackPanel>

        </Grid>


    </Grid>
    </Window>

